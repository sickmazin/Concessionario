<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="240.0" prefWidth="1000.0" styleClass="back" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.concessionario.ModificaController">
    <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="1000.0" spacing="15.0">
                  <children>
                      <Label alignment="TOP_LEFT" prefHeight="26.0" prefWidth="152.0" styleClass="paneLabel" text="Modifica veicolo" HBox.hgrow="NEVER" />
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Telaio" />
                        <Text fx:id="telaioT" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Modello" />
                        <Text fx:id="modelloT" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Posizione" />
                            <ChoiceBox fx:id="posizioneCB" prefHeight="26.0" prefWidth="110.0" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Carburante" />
                        <Text fx:id="carburanteT" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Prezzo" />
                            <TextField fx:id="prezzoTF" prefHeight="26.0" prefWidth="110.0" promptText="Prezzo..." />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Marca" />
                        <Text fx:id="marcaT" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Tipologia" />
                        <Text fx:id="tipologiaT" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Descrizione" />
                        <TextArea fx:id="descrizioneTA" prefHeight="60.0" prefWidth="110.0" promptText="Descrizione..." />
                     </children>
                  </VBox>
                  <VBox fx:id="vBoxAgg1" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Chilometraggio" />
                            <TextField prefHeight="26.0" prefWidth="110.0" />
                     </children>
                  </VBox>
                  <VBox fx:id="vBoxAgg2" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Data segnalazione" />
                        <DatePicker />
                     </children>
                  </VBox>
                  <VBox fx:id="vBoxAgg3" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="paneLabel" text="Stato riparazione" />
                        <ChoiceBox fx:id="statoRipCB" prefWidth="150.0" />
                     </children>
                  </VBox>
                      <HBox alignment="TOP_RIGHT" prefHeight="60.0" prefWidth="280.0" HBox.hgrow="SOMETIMES">
                          <children>
                              <Button mnemonicParsing="false" onMouseClicked="#modifica" prefHeight="34.0" prefWidth="96.0" text="Modifica">
                                  <HBox.margin>
                                      <Insets top="7.0" />
                                  </HBox.margin>
                              </Button>
                          </children>
                      </HBox>
                  </children>
                  <padding>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
              </HBox>
         </children>
      </VBox>
    </children>
</AnchorPane>
